{
  "name": "folder-beam-5000",
  "version": "1.0.0",
  "description": "Beam all the contents of a folder to another computer via hyperbeam",
  "main": "index.js",
  "author": "Alex McGonagle",
  "license": "MIT",
  "dependencies": {
    "b4a": "^1.6.0",
    "hi-base32": "^0.5.1",
    "hyperbeam": "^3.0.0",
    "sodium-universal": "^3.1.0",
    "streamspeed": "^2.0.1",
    "tar-fs": "^2.1.1"
  },
  "devDependencies": {
    "pkg": "^5.8.0"
  },
  "pkg": {
    "assets": "node_modules"
  },
  "scripts": {
    "buildServer": "pkg -t node16-macos-arm64 server.js -c package.json -d --compress Brotli -o './build/folder-beam-server'",
    "buildClient": "pkg -t node16-macos-arm64 client.js -c package.json -d --compress Brotli -o './build/folder-beam-client'",
    "build": "yarn run buildServer && yarn run buildClient"
  }
}
